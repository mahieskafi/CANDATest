<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/loading"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/fragment_weather_progress_bar_size"
            android:layout_height="@dimen/fragment_weather_progress_bar_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/fragment_weather_progress_bar_margin"
            android:theme="@style/ContentProgressBar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/data_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/city_name_text_view"
                style="@style/NameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fragment_weather_card_view_city_name_top_margin"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

           <include
               android:id="@+id/current_weather_view"
               android:layout_width="match_parent"
               android:layout_height="@dimen/card_view_height"
               layout="@layout/view_current_weather"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toBottomOf="@id/city_name_text_view"
               android:layout_marginStart="@dimen/fragment_weather_card_view_horizontally_margin"
               android:layout_marginTop="@dimen/fragment_weather_card_view_vertically_margin"
               android:layout_marginEnd="@dimen/fragment_weather_card_view_horizontally_margin" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/list_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/current_weather_view"
                android:layout_margin="@dimen/fragment_weather_forecast_label_margin"
                style="@style/TextViewTitle"
                android:text="@string/forecast_list_title" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/next_days_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/fragment_weather_forecast_recycler_margin_horizontally"
                android:layout_marginTop="@dimen/fragment_weather_forecast_recycler_margin_top"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_label" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>